{
  "name": "alpine-nodejs",
  "version": "1.0.1",
  "description": "基于 alpine+nodejs+npm+git 的镜像",
  "author": "CaoMeiYouRen",
  "private": true,
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "lint": "cross-env NODE_ENV=production eslint src --fix --ext .ts,.js",
    "release": "semantic-release",
    "build": "rimraf dist && tsc",
    "dev": "cross-env NODE_ENV=development ts-node-dev src/index.ts",
    "rm": "rimraf node_modules",
    "watch": "tsc -w",
    "start": "node ./dist/index",
    "commit": "cz",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^15.0.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/debug": "^4.1.9",
    "@types/node": "^20.8.3",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "commitizen": "^4.2.3",
    "conventional-changelog-cmyr-config": "^2.1.1",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog-cmyr": "^1.0.0",
    "debug": "^4.3.4",
    "eslint": "^8.50.0",
    "eslint-config-cmyr": "^1.1.30",
    "husky": "^8.0.1",
    "lint-staged": "^12.1.2",
    "rimraf": "^5.0.5",
    "semantic-release": "^18.0.1",
    "semantic-release-docker": "^2.2.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "tslib": "^2.6.2"
  },
  "keywords": [
    "docker"
  ],
  "engines": {
    "node": ">=14"
  },
  "homepage": "https://github.com/CaoMeiYouRen/alpine-nodejs#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CaoMeiYouRen/alpine-nodejs.git"
  },
  "bugs": {
    "url": "https://github.com/CaoMeiYouRen/alpine-nodejs/issues"
  },
  "changelog": {
    "language": "zh"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-cmyr"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint",
      "git add"
    ]
  }
}
